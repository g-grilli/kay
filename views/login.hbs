 <div class="container-fluid">
  <div class="container bg-4 text-center">
   <h3>Log In</h3>
<!--Alert-->
   {{#if fail}}<div class='alert alert-danger'>Email and password did not match. Please try again.</div>{{/if}}
   {{#if invalid}}<div class='alert alert-danger'>Sorry, that email is not in our database. Create an account <a href='/create_account'>here.</a></div>{{/if}}

   <form action="/login" method="POST">
<!--Email-->
   <div class="row delete">
    <div class="col-lg-6">
        <label><strong>Email Address</strong></label>
    </div>
    <div class="col-lg-6">
      <div class='input-bar'>
        <input type="text" name="login" style='width 276px;'>
      </div>
    </div>
   </div>
<!--Password-->
   <div class="row delete">
    <div class="col-lg-6">
     <label><strong>Password</strong></label>
    </div>
    <div class="col-lg-6">
      <div class='input-bar'>
     <input name='password' type='password'><br>
   </div>
     <a data-toggle="modal" data-target="#password">Forgot password?</a>
    </div>
   </div>
<!--Log in button-->
   <div class="row">
    <div class="col-lg-12">
      <button class="btn btn-primary" type="submit">Log In</button>
    </div>
   </div>
    </form>
<!--Create Account Link-->
    <div class="row">
     <div class="col-lg-12">
      <a href="/create_account">No account? Create one here.</a>
    </div>
   </div>
   </div>
 </div>
</div>
<!-- Modal -->
<div id="password" class="modal fade" role="dialog">
  <div class="modal-dialog">
<!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Reset Password</h4>
        <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-remove fa-2x"></i></button>
      </div>
      <div class="modal-body">
        <form action="/login" method="POST">
          <div class='input-bar'>
            <input type='hidden' name='reset_pass' value='true'>
            <input type="email" name="login"><br>
           </div>
         <label><strong>Please enter your email address.</strong></label><br>
         <div class="modal-footer">
           <input type="submit" class="btn btn-primary" value='Submit'>
        </div>
         
        </form>
      </div>
    </div>

  </div>
</div>
